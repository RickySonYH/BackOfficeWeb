# [advice from AI] 백엔드 프로덕션 환경 변수 샘플
# 복사 후 .env.production으로 이름 변경하여 사용

# 서버 설정
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aicc_ops_platform
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT 설정 (Kubernetes Secret으로 관리 권장)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# 암호화 설정 (Kubernetes Secret으로 관리 권장)
ENCRYPTION_KEY=your_32_character_encryption_key
ENCRYPTION_ALGORITHM=aes-256-gcm

# ECP 인증 설정 (Kubernetes Secret으로 관리 권장)
ECP_AUTH_URL=https://ecp-auth.aicc.co.kr
ECP_CLIENT_ID=aicc_ops_platform_client
ECP_CLIENT_SECRET=your_ecp_client_secret_here
ECP_REDIRECT_URI=http://localhost:6001/auth/callback

# CORS 설정
CORS_ORIGIN=http://localhost:6001
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# 파일 업로드 설정
MAX_FILE_SIZE=52428800
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=csv,json,xlsx,pdf,txt

# 로깅 설정
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14
LOG_DATE_PATTERN=YYYY-MM-DD

# 모니터링 설정
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Redis 설정 (세션 관리용)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Kubernetes 설정
K8S_NAMESPACE=default
K8S_CONFIG_PATH=/app/k8s-config

# 보안 헤더 설정
HELMET_ENABLED=true
TRUST_PROXY=true
