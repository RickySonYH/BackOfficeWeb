# [advice from AI] AICC Operations Management Platform 환경 변수 설정

# ===========================================
# 애플리케이션 기본 설정
# ===========================================
NODE_ENV=development
LOG_LEVEL=info

# ===========================================
# 서버 포트 설정
# ===========================================
# Backend API 서버 포트
PORT=6000
BACKEND_PORT=6000

# Frontend 개발 서버 포트  
FRONTEND_PORT=6001
VITE_PORT=6001

# ===========================================
# 관리 DB 접속 정보 (PostgreSQL - 포트 6432)
# ===========================================
DB_HOST=localhost
DB_PORT=6432
DB_NAME=aicc_ops
DB_USER=postgres
DB_PASSWORD=postgres123
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Docker Compose 내부에서 사용할 DB 호스트
DB_HOST_DOCKER=postgres

# ===========================================
# API 기본 URL 설정
# ===========================================
# Frontend에서 Backend API 호출 시 사용
VITE_API_BASE_URL=http://localhost:6000
API_BASE_URL=http://localhost:6000

# Docker Compose 내부에서 사용할 API URL
API_BASE_URL_DOCKER=http://backend:6000

# ===========================================
# 인증 설정
# ===========================================
# 인증 제공자 선택: internal | ecp
AUTH_PROVIDER=internal

# 내부 인증 활성화
INTERNAL_AUTH_ENABLED=true

# ECP 인증 활성화 (향후 사용)
ECP_AUTH_ENABLED=false

# ===========================================
# ECP 인증 서버 연동 설정 (향후 사용)
# ===========================================
# ECP 인증 서버 URL
ECP_AUTH_URL=https://ecp-auth.example.com
ECP_CLIENT_ID=aicc_ops_client
ECP_CLIENT_SECRET=your_ecp_client_secret_here
ECP_REDIRECT_URI=http://localhost:6000/api/auth/ecp/callback

# JWT 토큰 설정
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key
REFRESH_TOKEN_EXPIRES_IN=7d

# ===========================================
# Kubernetes API 접속 정보
# ===========================================
# Kubernetes 클러스터 설정
K8S_CLUSTER_URL=https://kubernetes.default.svc
K8S_TOKEN=your_kubernetes_service_account_token_here
K8S_NAMESPACE_PREFIX=aicc-

# Kubernetes 설정 파일 경로 (로컬 개발용)
KUBECONFIG_PATH=/path/to/kubeconfig
K8S_IN_CLUSTER=false

# ServiceAccount 기반 인증 사용 여부 (프로덕션 환경)
K8S_USE_SERVICE_ACCOUNT=false

# ===========================================
# 파일 업로드 설정
# ===========================================
# 최대 파일 크기 (MB)
MAX_FILE_SIZE=50

# 업로드 허용 파일 형식
ALLOWED_FILE_TYPES=csv,json,xlsx,pdf,txt

# 업로드 파일 저장 경로
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# ===========================================
# 보안 설정
# ===========================================
# CORS 허용 도메인
CORS_ORIGINS=http://localhost:6001,http://frontend:6001

# Rate Limiting 설정
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 암호화 키 (테넌트 DB 비밀번호 암호화용)
ENCRYPTION_KEY=your_32_character_encryption_key_here_change_in_production

# ===========================================
# 로깅 설정
# ===========================================
# 로그 파일 경로
LOG_PATH=./logs
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# ===========================================
# 개발 환경 설정
# ===========================================
# 개발 모드에서 상세 에러 표시
SHOW_STACK_TRACE=true

# API 문서 활성화
ENABLE_API_DOCS=true

# 개발용 더미 데이터 로드
LOAD_SAMPLE_DATA=true

# ===========================================
# 모니터링 및 헬스체크 설정
# ===========================================
# 헬스체크 엔드포인트 활성화
ENABLE_HEALTH_CHECK=true

# 데이터베이스 연결 체크 간격 (초)
DB_HEALTH_CHECK_INTERVAL=30

# Kubernetes 클러스터 연결 체크 간격 (초)
K8S_HEALTH_CHECK_INTERVAL=60

# ===========================================
# 테넌트별 DB 연결 설정
# ===========================================
# 테넌트 DB 연결 타임아웃 (초)
TENANT_DB_CONNECTION_TIMEOUT=10

# 테넌트 DB 연결 재시도 횟수
TENANT_DB_MAX_RETRIES=3

# 테넌트 DB 연결 풀 설정
TENANT_DB_POOL_MIN=2
TENANT_DB_POOL_MAX=10

