# [advice from AI] Kubernetes Secret 설정 예시
# 실제 배포 시 base64로 인코딩하여 사용
apiVersion: v1
kind: Secret
metadata:
  name: aicc-ops-secrets
  namespace: default
type: Opaque
data:
  # echo -n 'your_value' | base64
  jwt-secret: <base64_encoded_jwt_secret>
  encryption-key: <base64_encoded_encryption_key>
  ecp-client-secret: <base64_encoded_ecp_client_secret>
  db-password: <base64_encoded_db_password>
  redis-password: <base64_encoded_redis_password>

---
apiVersion: v1
kind: ConfigMap
metadata:
  name: aicc-ops-config
  namespace: default
data:
  NODE_ENV: "production"
  DB_HOST: "postgres-service"
  DB_PORT: "5432"
  DB_NAME: "aicc_operations"
  DB_USER: "aicc_admin"
  REDIS_HOST: "redis-service"
  REDIS_PORT: "6379"
  ECP_AUTH_URL: "https://ecp-auth.aicc.co.kr"
  ECP_CLIENT_ID: "aicc_ops_platform_client"
  CORS_ORIGIN: "https://ops.aicc.co.kr"
  LOG_LEVEL: "info"
  RATE_LIMIT_WINDOW_MS: "900000"
  RATE_LIMIT_MAX_REQUESTS: "100"
